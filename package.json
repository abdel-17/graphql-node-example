{
    "name": "graphql-node-example",
    "private": true,
    "scripts": {
        "db:init": "touch ./src/database.db && cat ./migrations/*.sql | sqlite3 ./src/database.db",
        "db:generate": "kysely-codegen --url ./src/database.db --out-file ./src/database.types.ts",
        "gql:generate": "graphql-codegen",
        "start": "tsx ./src/index.ts"
    },
    "dependencies": {
        "better-sqlite3": "^11.1.2",
        "graphql": "^16.9.0",
        "graphql-yoga": "^5.6.0",
        "kysely": "^0.27.4"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^5.0.2",
        "@graphql-codegen/typescript": "^4.0.9",
        "@graphql-codegen/typescript-resolvers": "^4.2.1",
        "@tsconfig/node20": "^20.1.4",
        "@types/better-sqlite3": "^7.6.11",
        "@types/node": "^20.14.10",
        "kysely-codegen": "^0.15.0",
        "tsx": "^4.16.2",
        "typescript": "^5.5.3"
    }
}
